# 使用 Node.js 构建前端
FROM node:18-alpine AS builder

WORKDIR /app

# 复制前端代码
COPY 前端/package*.json ./
RUN npm install

COPY 前端/ ./

# 构建生产版本
RUN npm run build

# 使用 Nginx 托管静态文件
FROM nginx:alpine

# 复制构建产物到 Nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# 复制 Nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
